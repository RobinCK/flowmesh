{
  "name": "flowmesh",
  "version": "3.7.11",
  "description": "Type-safe workflow engine for TypeScript with declarative approach and NestJS integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "lint:fix": "eslint \"{src,tests}/**/*.ts\" --fix",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "format:check": "prettier --check \"{src,tests}/**/*.ts\"",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "preversion": "npm run test",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "workflow",
    "state-machine",
    "typescript",
    "nestjs",
    "concurrency",
    "orchestration"
  ],
  "author": "Igor Ognichenko <ognichenko.igor@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/RobinCK/flowmesh"
  },
  "bugs": {
    "url": "https://github.com/RobinCK/flowmesh/issues"
  },
  "homepage": "https://github.com/RobinCK/flowmesh#readme",
  "license": "MIT",
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "reflect-metadata": "^0.2.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/common": {
      "optional": true
    },
    "@nestjs/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/testing": "^10.4.20",
    "@testcontainers/postgresql": "^11.8.0",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "ioredis": "^5.8.2",
    "jest": "^30.2.0",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.2",
    "testcontainers": "^11.8.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.0"
  }
}
